  <h3>Add Member</h3>
  <form method="post" action="/members/add">
      <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputFirst">First Name</label>
            <input type="text" class="form-control" name="first" id="inputFirst" placeholder="First Name">
      </div>
        <div class="form-group col-md-6">
            <label for="inputLast">Last Name</label>
            <input type="text" class="form-control" name="last" id="inputLast" placeholder="Last Name">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputCompany">Company</label>
          <input type="text" class="form-control" name="com" id="inputCompany" placeholder="Company">
        </div>
        <div class="form-group col-md-4">
          <label for="inputCity">City</label>
          <input type="text" class="form-control" name="city" id="inputCity" placeholder="City">
        </div>
        <div class="form-group col-md-4">
          <label for="inputContact">Contact #</label>
          <input type="number" class="form-control" name="contact" id="inputContact" placeholder="Contact #">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputAge">Age</label>
          <input type="number" class="form-control" name="age" id="inputAge" placeholder="Age">
        </div>
        <div class="form-group col-md-4">
          <label for="inputDob">Date of Birth</label>
          <input type="date" class="form-control" name="dob" id="inputDob" placeholder="Date of Birth">
        </div>
        <div class="form-group col-md-4">
          <label for="inputEmail">E-mail</label>
          <input type="email" class="form-control" name="email" id="inputEmail" placeholder="E-mail">
        </div>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck">
        <label class="form-check-label" for="gridCheck">
          All fields are double checked
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Add Member</button>
  </form>
</div>

  <div class="container pt-3">
    <h3>Members List</h3>
    <div class="table-responsive-sm">
      <table class="table table-dark table-hover" style="width:100%">
        <thead>
        <tr>
          <th class="pl-3">Lastname</th>
          <th class="pl-3">Firstname</th> 
          <th class="pl-3">City</th>
          <th class="pl-3">Age</th>
          <th class="text-center">Options</th>
        </tr>
        </thead>
        <tbody>
          {{#each members}}
        <tr>
          <td class="pl-3">
            {{this.value.last}}
          </td>
          <td class="pl-3">
            {{this.value.first}}
          </td>
          <td class="pl-3">
            {{this.value.city}}
          </td>
          <td class="pl-3">
            {{this.value.age}}
          </td>
          <td>
            <div class="text-center">
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal{{this.key}}">
                X
              </button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="modal{{this.key}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header bg-danger">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Warning</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span class="text-white" aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body text-dark">
                    Are you sure you want to delete <strong>{{this.value.first}} {{this.value.last}}</strong> from the database?
                  </div>
                  <div class="modal-footer">
                    <form method="post" action="/members/delete/{{this.key}}">
                      <input type="hidden" value="{{this.value.rev}}" name="rev">
                      <button type="submit" class="btn btn-danger">Delete</button>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- Modal -->
          </td>
        </tr>
        {{/each}}
      </tbody>
      </table>
    </div>    